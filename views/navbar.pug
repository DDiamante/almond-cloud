ul.nav.navbar-nav
  li
    a(href='/about')= _("About Us")
  li
    a(href="/me")= _("My Almond")
  if WITH_THINGPEDIA === 'embedded'
    li
      a(href='/thingpedia')= _("Thingpedia")
  li
    a(href='/thingpedia/developers')= _("Developers")
  if authenticated
    if user.developer_status >= 1
      li
        a(href="/me/status")= _("Status & Logs")
      if WITH_THINGPEDIA === 'embedded'
        li
          a(href='/thingpedia')= _("Thingpedia")
    if user.developer_status >= 3
      li
        a(href="/admin")= _("Administration")

ul.nav.navbar-nav.navbar-right
  if authenticated
    li
      a(href="/user/profile")= _("Settings")
  li
    if authenticated
      a.navbar-login#navbar-login-button(href='/user/logout')= _("Log Out")
    else
      a.navbar-login#navbar-login-button(href='/user/login')= _("Log In")
