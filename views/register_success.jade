extends layout

block scripts
  script(src='/javascripts/index.js')

block page_name
  - index = true;
  | Thingpedia

block content
  div#cloud-id-holder(data-cloud-id=user.cloud_id, data-auth-token=user.auth_token)

  div.jumbotron.text-center
    h1= _("Welcome to Almond, %s!").format(username)

    p= _("You're almost ready, you just need to download the Almond App.")

    p
      a(href='https://play.google.com/store/apps/details?id=edu.stanford.thingengine.engine').btn.btn-primary= _("Download")
