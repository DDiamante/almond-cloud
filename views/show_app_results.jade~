extends layout

block page_name
  | #{name}

block content
  for kw in arrays
    table.table
      caption= kw.name
      tbody
        each v in kw.value
          if Array.isArray(v)
            each e in v
              td= e
          else
            td= v

  for kw in tuples
    table.table
      caption= kw.name
      tbody
        tr
          each e in kw.value
            td= e

  dl
    for kw in singles
      dt= kw.name
      dt= kw.value
